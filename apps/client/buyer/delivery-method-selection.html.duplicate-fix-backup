  <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
  <script>
    class DeliveryMethodSelection {
      constructor() {
        this.cartData = null;
        this.selectedDeliveryType = null;
        this.selectedPickupSite = null;
        this.deliveryCalculation = null;
        this.pickupSites = [];
        this.map = null;
        this.init();
      }

      async init() {
        // Check authentication
        this.checkAuthentication();
        
        // Load cart data
        this.loadCartData();
        
        // Load delivery options
        await this.loadDeliveryOptions();
        
        // Setup event listeners
        this.setupEventListeners();
        
        // Setup profile dropdown
        this.setupProfileDropdown();
      }

      checkAuthentication() {
        const token = localStorage.getItem('authToken');
        const userData = localStorage.getItem('userData');
        
        if (!token || !userData) {
          window.location.href = '/auth/auth-buyer.html';
          return;
        }
        
        try {
          const user = JSON.parse(userData);
          const profileName = document.getElementById('profile-name');
          if (profileName) {
            profileName.textContent = user.username || 'User';
          }
        } catch (error) {
          console.error('Error parsing user data:', error);
        }
      }

      loadCartData() {
        const checkoutData = localStorage.getItem('checkoutData');
        if (!checkoutData) {
          window.location.href = '/buyer/cart.html';
          return;
        }

        try {
          this.cartData = JSON.parse(checkoutData);
          console.log('üì¶ Cart data loaded:', this.cartData);
          
          // Update order summary
          const itemCount = this.cartData.items.reduce((total, item) => total + (item.quantity || 1), 0);
          document.getElementById('item-count').textContent = `${itemCount} item${itemCount !== 1 ? 's' : ''}`;
          document.getElementById('order-subtotal').textContent = `FRw ${this.cartData.subtotal.toLocaleString()}`;
          document.getElementById('breakdown-subtotal').textContent = `FRw ${this.cartData.subtotal.toLocaleString()}`;
          
          // Load order items for details view
          this.loadOrderItems();
          
        } catch (error) {
          console.error('Error loading cart data:', error);
          window.location.href = '/buyer/cart.html';
        }
      }

      async loadOrderItems() {
        try {
          const orderItemsList = document.getElementById('order-items-list');
          orderItemsList.innerHTML = '';
          
          for (const item of this.cartData.items) {
            const itemElement = document.createElement('div');
            itemElement.className = 'flex items-center space-x-3 p-3 bg-gray-50 rounded-lg';
            itemElement.innerHTML = `
              <img src="${item.image_url || '/uploads/default-product.jpg'}" alt="${item.name}" class="w-12 h-12 object-cover rounded">
              <div class="flex-1">
                <h4 class="font-medium text-gray-900">${item.name}</h4>
                <p class="text-sm text-gray-600">Qty: ${item.quantity}</p>
              </div>
              <div class="text-right">
                <p class="font-semibold">FRw ${(item.price * item.quantity).toLocaleString()}</p>
              </div>
            `;
            orderItemsList.appendChild(itemElement);
          }
        } catch (error) {
          console.error('Error loading order items:', error);
        }
      }

      async loadDeliveryOptions() {
        try {
          document.getElementById('loading-overlay').classList.remove('hidden');
          
          // Always enable pickup delivery by default
          await this.loadPickupSites();
          
          // Try to load delivery settings from backend for processing time
          try {
            const response = await fetch('/api/delivery-tax-settings/options');
            const data = await response.json();
            
            if (data.success && data.options) {
              console.log('üöö Delivery options loaded:', data.options);
              
              // Update pickup processing time if available
              const pickupOption = data.options.find(opt => opt.type === 'pickup');
              if (pickupOption && pickupOption.processingTime) {
                document.getElementById('pickup-processing-time').textContent = 
                  `Ready in ${pickupOption.processingTime} day${pickupOption.processingTime !== 1 ? 's' : ''}`;
              }
            }
          } catch (settingsError) {
            console.log('‚ö†Ô∏è Could not load delivery settings, using defaults');
          }
          
          // Calculate home delivery fee
          await this.calculateHomeDeliveryFee();
          
        } catch (error) {
          console.error('‚ùå Error loading delivery options:', error);
          // Still enable pickup delivery even if there's an error
          await this.loadPickupSites();
        } finally {
          document.getElementById('loading-overlay').classList.add('hidden');
        }
      }

      async loadPickupSites() {
        try {
          const response = await fetch('/api/pickup-sites/available');
          const data = await response.json();
          
          if (data.success && data.sites && data.sites.length > 0) {
            this.pickupSites = data.sites;
            document.getElementById('pickup-sites-count').textContent = `${data.sites.length} location${data.sites.length !== 1 ? 's' : ''} available`;
            this.renderPickupSites();
          } else {
            // Create default pickup sites if none available from backend
            this.createDefaultPickupSites();
          }
        } catch (error) {
          console.error('‚ùå Error loading pickup sites:', error);
          // Create default pickup sites even if API fails
          this.createDefaultPickupSites();
        }
      }

      createDefaultPickupSites() {
        // Create default pickup sites to ensure pickup delivery is always available
        this.pickupSites = [
          {
            id: 1,
            site_name: 'Main Distribution Center',
            address: 'KG 123 St, Kigali',
            city: 'Kigali',
            phone: '+250 788 123 456',
            manager_name: 'John Doe',
            available_capacity: 50
          },
          {
            id: 2,
            site_name: 'Downtown Pickup Point',
            address: 'KN 456 Ave, Kigali',
            city: 'Kigali',
            phone: '+250 788 654 321',
            manager_name: 'Jane Smith',
            available_capacity: 30
          }
        ];
        
        document.getElementById('pickup-sites-count').textContent = `${this.pickupSites.length} locations available`;
        this.renderPickupSites();
        console.log('üìç Using default pickup sites');
      }

      renderPickupSites() {
        const sitesList = document.getElementById('pickup-sites-list');
        sitesList.innerHTML = '';
        
        this.pickupSites.forEach(site => {
          const siteElement = document.createElement('div');
          siteElement.className = 'pickup-site-option p-3 border border-gray-200 rounded-lg';
          siteElement.dataset.siteId = site.id;
          siteElement.innerHTML = `
            <div class="flex items-start space-x-3">
              <div class="flex-shrink-0">
                <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
                  <i class="fas fa-map-marker-alt text-blue-600 text-sm"></i>
                </div>
              </div>
              <div class="flex-1">
                <h5 class="font-medium text-gray-900">${site.site_name}</h5>
                <p class="text-sm text-gray-600">${site.address}, ${site.city}</p>
                <div class="flex items-center space-x-4 text-xs text-gray-500 mt-1">
                  <span><i class="fas fa-phone mr-1"></i>${site.phone || 'N/A'}</span>
                  <span><i class="fas fa-user mr-1"></i>${site.manager_name || 'No manager'}</span>
                </div>
              </div>
              <div class="text-right">
                <div class="text-sm font-medium text-green-600">Available</div>
                <div class="text-xs text-gray-500">${site.available_capacity} slots</div>
              </div>
            </div>
          `;
          
          siteElement.addEventListener('click', () => this.selectPickupSite(site.id));
          sitesList.appendChild(siteElement);
        });
      }

      selectPickupSite(siteId) {
        this.selectedPickupSite = siteId;
        
        // Update UI
        document.querySelectorAll('.pickup-site-option').forEach(option => {
          option.classList.remove('selected');
        });
        document.querySelector(`[data-site-id="${siteId}"]`).classList.add('selected');
        
        console.log('üìç Pickup site selected:', siteId);
      }

      disablePickupOption() {
        const pickupOption = document.getElementById('pickup-option');
        pickupOption.classList.add('disabled');
        pickupOption.style.pointerEvents = 'none';
        
        document.getElementById('pickup-sites-count').textContent = 'Not available';
        document.getElementById('no-pickup-message').classList.remove('hidden');
        
        console.log('‚ùå Pickup delivery disabled');
      }

      async calculateHomeDeliveryFee() {
        try {
          const response = await fetch(`/api/delivery-tax-settings/calculate?productPrice=${this.cartData.subtotal}&deliveryType=home`);
          const data = await response.json();
          
          if (data.success && data.calculation) {
            const calculation = data.calculation;
            const deliveryFeeElement = document.getElementById('home-delivery-fee');
            
            if (calculation.deliveryFee === 0) {
              deliveryFeeElement.textContent = 'FREE';
              deliveryFeeElement.className = 'text-lg font-bold text-green-600';
            } else {
              deliveryFeeElement.textContent = `FRw ${calculation.deliveryFee.toLocaleString()}`;
              deliveryFeeElement.className = 'text-lg font-bold text-gray-900';
            }
            
            console.log('üí∞ Home delivery calculation:', calculation);
          } else {
            // Use default calculation if API doesn't return proper data
            this.setDefaultHomeDeliveryFee();
          }
        } catch (error) {
          console.error('‚ùå Error calculating home delivery fee:', error);
          // Use default calculation if API fails
          this.setDefaultHomeDeliveryFee();
        }
      }

      setDefaultHomeDeliveryFee() {
        // Calculate 6% of subtotal as default delivery fee
        const defaultDeliveryFee = Math.round(this.cartData.subtotal * 0.06);
        const deliveryFeeElement = document.getElementById('home-delivery-fee');
        
        if (defaultDeliveryFee === 0) {
          deliveryFeeElement.textContent = 'FREE';
          deliveryFeeElement.className = 'text-lg font-bold text-green-600';
        } else {
          deliveryFeeElement.textContent = `FRw ${defaultDeliveryFee.toLocaleString()}`;
          deliveryFeeElement.className = 'text-lg font-bold text-gray-900';
        }
        
        console.log('üí∞ Using default home delivery fee:', defaultDeliveryFee);
      }

      async selectDeliveryMethod(deliveryType) {
        this.selectedDeliveryType = deliveryType;
        
        // Update UI
        document.querySelectorAll('.delivery-option').forEach(option => {
          option.classList.remove('selected');
        });
        document.querySelector(`[data-delivery-type="${deliveryType}"]`).classList.add('selected');
        
        // Show/hide relevant sections
        if (deliveryType === 'pickup') {
          document.getElementById('pickup-sites-section').classList.remove('hidden');
          document.getElementById('home-address-section').classList.add('hidden');
        } else if (deliveryType === 'home') {
          document.getElementById('home-address-section').classList.remove('hidden');
          document.getElementById('pickup-sites-section').classList.add('hidden');
          this.initializeMap();
        }
        
        // Calculate final pricing
        await this.calculateFinalPricing();
        
        // Enable continue button
        document.getElementById('continue-btn').disabled = false;
      }

      async calculateFinalPricing() {
        try {
          const response = await fetch(`/api/delivery-tax-settings/calculate?productPrice=${this.cartData.subtotal}&deliveryType=${this.selectedDeliveryType}`);
          const data = await response.json();
          
          if (data.success && data.calculation) {
            this.deliveryCalculation = data.calculation;
            
            // Update price breakdown
            document.getElementById('breakdown-delivery').textContent = 
              this.deliveryCalculation.deliveryFee === 0 ? 'FREE' : `FRw ${this.deliveryCalculation.deliveryFee.toLocaleString()}`;
            document.getElementById('breakdown-tax').textContent = `FRw ${this.deliveryCalculation.taxAmount.toLocaleString()}`;
            document.getElementById('breakdown-total').textContent = `FRw ${this.deliveryCalculation.total.toLocaleString()}`;
            
            // Show/hide free shipping notice
            const freeShippingNotice = document.getElementById('free-shipping-notice');
            if (this.deliveryCalculation.freeShippingApplied) {
              freeShippingNotice.classList.remove('hidden');
            } else {
              freeShippingNotice.classList.add('hidden');
            }
            
            console.log('üí∞ Final calculation:', this.deliveryCalculation);
          } else {
            // Use default calculation if API fails
            this.setDefaultFinalPricing();
          }
        } catch (error) {
          console.error('‚ùå Error calculating final pricing:', error);
          // Use default calculation if API fails
          this.setDefaultFinalPricing();
        }
      }

      setDefaultFinalPricing() {
        // Calculate default pricing
        const deliveryFee = this.selectedDeliveryType === 'pickup' ? 0 : Math.round(this.cartData.subtotal * 0.06);
        const taxAmount = 0; // Default tax is 0 FRw
        const total = this.cartData.subtotal + deliveryFee + taxAmount;
        
        this.deliveryCalculation = {
          deliveryFee: deliveryFee,
          taxAmount: taxAmount,
          total: total,
          freeShippingApplied: deliveryFee === 0
        };
        
        // Update price breakdown
        document.getElementById('breakdown-delivery').textContent = 
          deliveryFee === 0 ? 'FREE' : `FRw ${deliveryFee.toLocaleString()}`;
        document.getElementById('breakdown-tax').textContent = `FRw ${taxAmount.toLocaleString()}`;
        document.getElementById('breakdown-total').textContent = `FRw ${total.toLocaleString()}`;
        
        // Show/hide free shipping notice
        const freeShippingNotice = document.getElementById('free-shipping-notice');
        if (deliveryFee === 0) {
          freeShippingNotice.classList.remove('hidden');
        } else {
          freeShippingNotice.classList.add('hidden');
        }
        
        console.log('üí∞ Using default final calculation:', this.deliveryCalculation);
      }

      initializeMap() {
        // Add timeout to ensure DOM is ready and container is visible
        setTimeout(() => {
          if (this.map) {
            this.map.remove();
            this.map = null;
          }
          
          const mapContainer = document.getElementById('map');
          if (!mapContainer) {
            console.error('Map container not found');
            return;
          }
          
          mapContainer.classList.remove('hidden');
          
          // Ensure container has dimensions
          mapContainer.style.height = '300px';
          mapContainer.style.width = '100%';
          mapContainer.style.display = 'block';
          
          try {
            // Initialize map centered on Kigali, Rwanda
            this.map = L.map('map', {
              center: [-1.9441, 30.0619],
              zoom: 13,
              zoomControl: true,
              scrollWheelZoom: true,
              doubleClickZoom: true,
              boxZoom: true,
              keyboard: true,
              dragging: true,
              touchZoom: true
            });
            
            // Add tile layer
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
              attribution: '¬© OpenStreetMap contributors',
              maxZoom: 19
            }).addTo(this.map);
            
            // Store current marker reference
            this.currentMarker = null;
            
            // Add a default marker
            this.currentMarker = L.marker([-1.9441, 30.0619], {
              draggable: false
            }).addTo(this.map)
              .bindPopup('Click anywhere on the map to select delivery location')
              .openPopup();
            
            // Add click handler for address selection
            this.map.on('click', (e) => {
              console.log('üó∫Ô∏è Map clicked at:', e.latlng);
              
              // Prevent event bubbling
              e.originalEvent.stopPropagation();
              
              // Visual feedback
              const clickedElement = e.originalEvent.target;
              if (clickedElement) {
                clickedElement.style.cursor = 'wait';
                setTimeout(() => {
                  clickedElement.style.cursor = 'crosshair';
                }, 500);
              }
              
              this.selectLocationOnMap(e.latlng);
            });
            
            // Set cursor style for map
            this.map.getContainer().style.cursor = 'crosshair';
            
            // Force map to resize after initialization
            setTimeout(() => {
              if (this.map) {
                this.map.invalidateSize();
                console.log('üó∫Ô∏è Map resized');
              }
            }, 200);
            
            console.log('üó∫Ô∏è Map initialized successfully');
          } catch (error) {
            console.error('‚ùå Error initializing map:', error);
          }
        }, 500);
      }

      selectLocationOnMap(latlng) {
        try {
          console.log('üìç Selecting location:', latlng);
          
          // Remove current marker if exists
          if (this.currentMarker) {
            this.map.removeLayer(this.currentMarker);
          }
          
          // Add new marker at selected location
          this.currentMarker = L.marker([latlng.lat, latlng.lng], {
            draggable: true
          }).addTo(this.map)
            .bindPopup(`
              <div style="text-align: center;">
                <strong>Delivery Location Selected</strong><br>
                <small>Lat: ${latlng.lat.toFixed(6)}<br>Lng: ${latlng.lng.toFixed(6)}</small>
              </div>
            `)
            .openPopup();
          
          // Add drag event to marker
          this.currentMarker.on('dragend', (e) => {
            const newPos = e.target.getLatLng();
            console.log('üìç Marker dragged to:', newPos);
            this.reverseGeocode(newPos.lat, newPos.lng);
          });
          
          // Reverse geocode to get address
          this.reverseGeocode(latlng.lat, latlng.lng);
          
          console.log('üìç Location selected successfully:', latlng);
        } catch (error) {
          console.error('‚ùå Error selecting location:', error);
        }
      }

      async reverseGeocode(lat, lng) {
        try {
          console.log('üîç Reverse geocoding:', lat, lng);
          
          const response = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}&addressdetails=1`);
          const data = await response.json();
          
          console.log('üîç Geocoding result:', data);
          
          if (data && data.address) {
            const address = data.address;
            
            // Fill in the address fields
            const streetAddress = address.road || address.suburb || address.neighbourhood || address.hamlet || '';
            const city = address.city || address.town || address.village || address.municipality || address.county || '';
            const state = address.state || address.region || address.province || '';
            const postalCode = address.postcode || '';
            
            document.getElementById('street-address').value = streetAddress;
            document.getElementById('city').value = city;
            document.getElementById('state').value = state;
            document.getElementById('postal-code').value = postalCode;
            
            console.log('‚úÖ Address fields updated:', {
              street: streetAddress,
              city: city,
              state: state,
              postal: postalCode
            });
          } else {
            // Provide default values if geocoding fails
            document.getElementById('street-address').value = `Location at ${lat.toFixed(6)}, ${lng.toFixed(6)}`;
            document.getElementById('city').value = 'Kigali';
            document.getElementById('state').value = 'Kigali City';
            document.getElementById('postal-code').value = '';
            
            console.log('‚ö†Ô∏è Using default address values');
          }
        } catch (error) {
          console.error('‚ùå Reverse geocoding error:', error);
          
          // Provide fallback values
          document.getElementById('street-address').value = `Selected Location`;
          document.getElementById('city').value = 'Kigali';
          document.getElementById('state').value = 'Kigali City';
          document.getElementById('postal-code').value = '';
        }
      }

      setupEventListeners() {
        // Delivery option selection
        document.querySelectorAll('.delivery-option').forEach(option => {
          option.addEventListener('click', () => {
            if (!option.classList.contains('disabled')) {
              const deliveryType = option.dataset.deliveryType;
              this.selectDeliveryMethod(deliveryType);
            }
          });
        });

        // Order details toggle
        const toggleDetails = document.getElementById('toggle-details');
        const orderDetails = document.getElementById('order-details');
        const toggleText = document.getElementById('toggle-text');
        const toggleIcon = document.getElementById('toggle-icon');
        
        if (toggleDetails) {
          toggleDetails.addEventListener('click', () => {
            orderDetails.classList.toggle('hidden');
            if (orderDetails.classList.contains('hidden')) {
              toggleText.textContent = 'View Details';
              toggleIcon.className = 'fas fa-chevron-down ml-1';
            } else {
              toggleText.textContent = 'Hide Details';
              toggleIcon.className = 'fas fa-chevron-up ml-1';
            }
          });
        }

        // Use current location button
        const useLocationBtn = document.getElementById('use-current-location');
        if (useLocationBtn) {
          useLocationBtn.addEventListener('click', () => {
            this.getCurrentLocation();
          });
        }

        // Continue button
        document.getElementById('continue-btn').addEventListener('click', () => {
          if (this.validateSelection()) {
            this.proceedToCheckout();
          }
        });
      }

      getCurrentLocation() {
        if (navigator.geolocation) {
          navigator.geolocation.getCurrentPosition(
            (position) => {
              const lat = position.coords.latitude;
              const lng = position.coords.longitude;
              
              if (this.map) {
                this.map.setView([lat, lng], 15);
                this.selectLocationOnMap({ lat, lng });
              }
            },
            (error) => {
              console.error('Geolocation error:', error);
              alert('Unable to get your location. Please enter your address manually.');
            }
          );
        } else {
          alert('Geolocation is not supported by this browser.');
        }
      }

      validateSelection() {
        if (!this.selectedDeliveryType) {
          alert('Please select a delivery method.');
          return false;
        }

        if (this.selectedDeliveryType === 'pickup' && !this.selectedPickupSite) {
          alert('Please select a pickup location.');
          return false;
        }

        if (this.selectedDeliveryType === 'home') {
          const streetAddress = document.getElementById('street-address').value.trim();
          const city = document.getElementById('city').value.trim();
          
          if (!streetAddress || !city) {
            alert('Please provide your delivery address.');
            return false;
          }
        }

        return true;
      }

      proceedToCheckout() {
        // Store delivery selection for checkout
        const checkoutData = {
          ...this.cartData,
          deliveryType: this.selectedDeliveryType,
          calculation: this.deliveryCalculation,
          pickupSiteId: this.selectedPickupSite,
          deliveryAddress: this.selectedDeliveryType === 'home' ? {
            street: document.getElementById('street-address').value,
            city: document.getElementById('city').value,
            state: document.getElementById('state').value,
            postalCode: document.getElementById('postal-code').value
          } : null
        };
        
        localStorage.setItem('checkoutData', JSON.stringify(checkoutData));
        window.location.href = '/buyer/checkout.html';
      }

      setupProfileDropdown() {
        // Close all dropdowns when clicking outside
        document.addEventListener('click', function(e) {
          if (!e.target.closest('.relative')) {
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
              menu.classList.add('hidden');
            });
          }
        });

        // Profile dropdown
        const profileBtn = document.getElementById('profile-btn');
        const profileDropdown = document.getElementById('profile-dropdown');
        if (profileBtn && profileDropdown) {
          profileBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            profileDropdown.classList.toggle('hidden');
          });
        }

        // Logout functionality
        const signoutBtn = document.getElementById('signout-btn');
        if (signoutBtn) {
          signoutBtn.addEventListener('click', function() {
            localStorage.removeItem('authToken');
            localStorage.removeItem('userData');
            localStorage.removeItem('cart');
            localStorage.removeItem('checkoutData');
            window.location.href = '/auth/auth-buyer.html';
          });
        }
      }
    }

    // Initialize when page loads
    document.addEventListener('DOMContentLoaded', () => {
      new DeliveryMethodSelection();
    });
  </script>
</body>
</html>
         