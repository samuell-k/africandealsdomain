  <!-- Footer -->
  <footer class="bg-gray-900 text-white py-8 mt-16">
    <div class="max-w-7xl mx-auto px-4 text-center">
      <p class="text-gray-400">&copy; 2024 ADD Physical Products. All rights reserved.</p>
      <p class="text-sm text-gray-500 mt-2">Secure shopping for physical products marketplace</p>
    </div>
  </footer>

  <script>
    class CartManager {
      constructor() {
        this.cartItems = [];
        this.currency = 'RWF';
        this.currencySymbol = 'FRw';
        this.init();
      }

      async init() {
        // Load saved currency preferences
        this.loadCurrencySettings();
        
        // Check authentication
        this.checkAuthentication();
        
        // Load cart items
        await this.loadCartItems();
        
        // Setup event listeners
        this.setupEventListeners();
        
        // Load recommended products
        await this.loadRecommendedProducts();
        
        // Setup profile dropdown
        this.setupProfileDropdown();
      }

      checkAuthentication() {
        const token = localStorage.getItem('authToken');
        const userData = localStorage.getItem('userData');
        
        if (!token || !userData) {
          window.location.href = '/auth/auth-buyer.html';
          return;
        }
        
        try {
          const user = JSON.parse(userData);
          const profileName = document.getElementById('profile-name');
          if (profileName) {
            profileName.textContent = user.username || 'User';
          }
        } catch (error) {
          console.error('Error parsing user data:', error);
        }
      }

      loadCurrencySettings() {
        this.currency = localStorage.getItem('selectedCurrency') || 'RWF';
        const currencySymbols = { USD: '$', RWF: 'FRw', EUR: '‚Ç¨', CNY: '¬•', KES: 'Ksh', NGN: '‚Ç¶' };
        this.currencySymbol = currencySymbols[this.currency] || 'FRw';
      }

      formatCurrency(amount) {
        return `${this.currencySymbol} ${parseFloat(amount).toLocaleString()}`;
      }



      async loadCartItems() {
        // Load cart items from localStorage and fetch product details from backend
        const savedCart = JSON.parse(localStorage.getItem('cart') || '[]');
        console.log('üõí Loading cart from localStorage:', savedCart);
        
        if (savedCart.length === 0) {
          this.cartItems = [];
          this.renderCart();
          this.updateSummary();
          return;
        }

        // Show loading state
        const container = document.getElementById('cart-items-list');
        if (container) {
          container.innerHTML = `
            <div class="text-center py-12">
              <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto mb-4"></div>
              <p class="text-gray-600">Loading your cart items...</p>
            </div>
          `;
        }

        // Fetch product details for each cart item
        try {
          const productPromises = savedCart.map(async (cartItem) => {
            try {
              const token = localStorage.getItem('authToken');
              const response = await fetch(`/api/products/${cartItem.id}`, {
                headers: {
                  'Authorization': `Bearer ${token}`,
                  'Content-Type': 'application/json'
                }
              });
              
              const data = await response.json();
              
              if (data.success && data.product) {
                return {
                  id: data.product.id,
                  name: data.product.name,
                  price: parseFloat(data.product.discount_price || data.product.price),
                  originalPrice: data.product.discount_price ? parseFloat(data.product.price) : null,
                  image: data.product.main_image ? `/uploads/${data.product.main_image}` : '/public/images/placeholder-product.jpg',
                  seller: data.product.seller_name || 'Trusted Seller',
                  quantity: cartItem.quantity || 1,
                  stock: data.product.stock || 0,
                  category: data.product.category_name || 'Uncategorized',
                  description: data.product.description || ''
                };
              } else {
                console.warn(`‚ùå Product ${cartItem.id} not found, removing from cart`);
                return null;
              }
            } catch (error) {
              console.error(`‚ùå Error fetching product ${cartItem.id}:`, error);
              return null;
            }
          });

          const products = await Promise.all(productPromises);
          this.cartItems = products.filter(product => product !== null);
          
          // Update localStorage to remove any invalid items
          const validCartItems = this.cartItems.map(item => ({
            id: item.id,
            quantity: item.quantity,
            added_at: new Date().toISOString()
          }));
          localStorage.setItem('cart', JSON.stringify(validCartItems));
          
          console.log('‚úÖ Cart items loaded successfully:', this.cartItems);
          
        } catch (error) {
          console.error('‚ùå Error loading cart items:', error);
          this.cartItems = [];
        }

        this.renderCart();
        this.updateSummary();
        this.updateCartBadge();
      }

      renderCart() {
        const container = document.getElementById('cart-items-list');
        const countElement = document.getElementById('cart-item-count');
        
        if (this.cartItems.length === 0) {
          container.innerHTML = `
            <div class="text-center py-12">
              <div class="text-6xl mb-4">üõí</div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Your cart is empty</h3>
              <p class="text-gray-600 mb-6">Add some amazing products to get started!</p>
              <a href="/buyer/buyers-home.html" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white px-6 py-3 rounded-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
                Start Shopping
              </a>
            </div>
          `;
          countElement.textContent = '0 items';
          return;
        }

        container.innerHTML = this.cartItems.map(item => this.createCartItemHtml(item)).join('');
        countElement.textContent = `${this.cartItems.length} item${this.cartItems.length !== 1 ? 's' : ''}`;
      }

      createCartItemHtml(item) {
        const formattedPrice = this.formatCurrency(item.price);
        const formattedOriginalPrice = item.originalPrice ? this.formatCurrency(item.originalPrice) : null;

        return `
          <div class="flex items-center gap-4 p-4 bg-white rounded-xl border border-gray-200 hover:shadow-md transition-shadow">
            <img src="${item.image || '/public/images/placeholder-product.jpg'}" 
                 alt="${item.name}" 
                 class="w-16 h-16 object-cover rounded-lg"
                 onerror="this.src='/public/images/placeholder-product.jpg'">
            
            <div class="flex-1">
              <h3 class="font-semibold text-gray-900">${item.name}</h3>
              <p class="text-sm text-gray-500">${item.seller || 'Trusted Seller'}</p>
              ${item.description ? `<p class="text-xs text-gray-400 mt-1">${item.description.substring(0, 100)}${item.description.length > 100 ? '...' : ''}</p>` : ''}
              <div class="flex items-center gap-2 mt-2">
                <span class="text-lg font-bold text-green-600">${formattedPrice}</span>
                ${item.originalPrice ? `<span class="text-sm text-gray-400 line-through">${formattedOriginalPrice}</span>` : ''}
                ${item.originalPrice ? `<span class="text-xs bg-red-100 text-red-600 px-2 py-1 rounded">SALE</span>` : ''}
              </div>
              <p class="text-xs text-gray-500 mt-1">Stock: ${item.stock} available</p>
            </div>
            
            <div class="flex items-center gap-3">
              <div class="flex items-center border border-gray-200 rounded-lg">
                <button onclick="cartManager.decreaseQuantity(${item.id})" class="p-2 hover:bg-gray-100 transition-colors" ${item.quantity <= 1 ? 'disabled' : ''}>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                  </svg>
                </button>
                <span class="px-4 py-2 font-medium">${item.quantity || 1}</span>
                <button onclick="cartManager.increaseQuantity(${item.id})" class="p-2 hover:bg-gray-100 transition-colors" ${item.quantity >= item.stock ? 'disabled' : ''}>
                  <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                  </svg>
                </button>
              </div>
              
              <button onclick="cartManager.removeItem(${item.id})" class="p-2 text-red-600 hover:bg-red-50 rounded-lg transition-colors" title="Remove from cart">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                </svg>
              </button>
            </div>
          </div>
        `;
      }

      updateSummary() {
        const subtotal = this.cartItems.reduce((total, item) => total + (item.price * (item.quantity || 1)), 0);
        const itemCount = this.cartItems.reduce((total, item) => total + (item.quantity || 1), 0);
        
        const subtotalElement = document.getElementById('cart-subtotal');
        const totalElement = document.getElementById('cart-total');
        const itemCountElement = document.getElementById('cart-item-count');
        const checkoutBtn = document.getElementById('checkout-btn');

        if (subtotalElement) subtotalElement.textContent = this.formatCurrency(subtotal);
        if (totalElement) totalElement.textContent = this.formatCurrency(subtotal);
        if (itemCountElement) itemCountElement.textContent = itemCount;

        // Enable/disable checkout button
        if (checkoutBtn) {
          checkoutBtn.disabled = this.cartItems.length === 0;
          if (this.cartItems.length > 0) {
            checkoutBtn.textContent = `Proceed to Checkout`;
          } else {
            checkoutBtn.textContent = 'Proceed to Checkout';
          }
        }
      }

      increaseQuantity(itemId) {
        const item = this.cartItems.find(item => item.id === itemId);
        if (item && item.quantity < item.stock) {
          item.quantity = (item.quantity || 1) + 1;
          this.saveCart();
          this.renderCart();
          this.updateSummary();
          this.showToast('‚úÖ Quantity updated', 'success');
        } else if (item && item.quantity >= item.stock) {
          this.showToast('‚ùå Cannot add more items. Stock limit reached.', 'error');
        }
      }

      decreaseQuantity(itemId) {
        const item = this.cartItems.find(item => item.id === itemId);
        if (item && (item.quantity || 1) > 1) {
          item.quantity = (item.quantity || 1) - 1;
          this.saveCart();
          this.renderCart();
          this.updateSummary();
          this.showToast('‚úÖ Quantity updated', 'success');
        }
      }

      removeItem(itemId) {
        const item = this.cartItems.find(item => item.id === itemId);
        const itemName = item ? item.name : 'Item';
        
        this.cartItems = this.cartItems.filter(item => item.id !== itemId);
        this.saveCart();
        this.renderCart();
        this.updateSummary();
        this.showToast(`üóëÔ∏è ${itemName} removed from cart`, 'success');
      }

      showToast(message, type = 'info') {
        const toast = document.createElement('div');
        toast.className = `fixed top-4 right-4 z-50 px-4 py-2 rounded-lg shadow-lg text-white font-medium ${
          type === 'success' ? 'bg-green-600' : 
          type === 'error' ? 'bg-red-600' : 'bg-blue-600'
        }`;
        toast.textContent = message;
        
        document.body.appendChild(toast);
        
        setTimeout(() => {
          toast.remove();
        }, 3000);
      }

      saveCart() {
        // Save cart in the format expected by the buyer dashboard
        const cartData = this.cartItems.map(item => ({
          id: item.id,
          quantity: item.quantity,
          added_at: new Date().toISOString()
        }));
        localStorage.setItem('cart', JSON.stringify(cartData));
        
        // Update cart badge in navigation
        this.updateCartBadge();
      }

      updateCartBadge() {
        // Update cart badge count
        const totalItems = this.cartItems.reduce((sum, item) => sum + item.quantity, 0);
        const badge = document.querySelector('[data-cart-count]');
        if (badge) {
          if (totalItems > 0) {
            badge.textContent = totalItems;
            badge.classList.remove('hidden');
          } else {
            badge.classList.add('hidden');
          }
        }
      }

      setupEventListeners() {
        const checkoutBtn = document.getElementById('checkout-btn');
        if (checkoutBtn) {
          checkoutBtn.addEventListener('click', () => {
            if (this.cartItems.length > 0) {
              // Store cart data for checkout
              localStorage.setItem('checkoutData', JSON.stringify({
                items: this.cartItems,
                subtotal: this.cartItems.reduce((total, item) => total + (item.price * item.quantity), 0),
                timestamp: new Date().toISOString()
              }));
              window.location.href = '/buyer/delivery-method-selection.html';
            }
          });
        }
      }

      setupProfileDropdown() {
        // Close all dropdowns when clicking outside
        document.addEventListener('click', function(e) {
          if (!e.target.closest('.relative')) {
            document.querySelectorAll('.dropdown-menu').forEach(menu => {
              menu.classList.add('hidden');
            });
          }
        });

        // Profile dropdown
        const profileBtn = document.getElementById('profile-btn');
        const profileDropdown = document.getElementById('profile-dropdown');
        if (profileBtn && profileDropdown) {
          profileBtn.addEventListener('click', function(e) {
            e.stopPropagation();
            profileDropdown.classList.toggle('hidden');
          });
        }

        // Logout functionality
        const signoutBtn = document.getElementById('signout-btn');
        if (signoutBtn) {
          signoutBtn.addEventListener('click', function() {
            localStorage.removeItem('authToken');
            localStorage.removeItem('userData');
            localStorage.removeItem('cart');
            window.location.href = '/auth/auth-buyer.html';
          });
        }
      }

      async loadRecommendedProducts() {
        try {
          const token = localStorage.getItem('authToken');
          const response = await fetch('/api/products?limit=5&featured=true', {
            headers: {
              'Authorization': `Bearer ${token}`,
              'Content-Type': 'application/json'
            }
          });
          
          const data = await response.json();
          
          if (data.success && data.products) {
            this.renderRecommendedProducts(data.products);
          } else {
            console.log('No recommended products found');
            this.hideRecommendedSection();
          }
        } catch (error) {
          console.error('Error loading recommended products:', error);
          this.hideRecommendedSection();
        }
      }

      renderRecommendedProducts(products) {
        const container = document.getElementById('recommended-products');
        if (!container || products.length === 0) {
          this.hideRecommendedSection();
          return;
        }

        container.innerHTML = products.map(product => `
          <div class="bg-white rounded-2xl p-4 shadow-lg hover:shadow-xl transition-all duration-300 cursor-pointer group"
               onclick="window.location.href='/buyer/product-detail.html?id=${product.id}'">
            <div class="aspect-square bg-gray-100 rounded-xl overflow-hidden mb-3">
              <img src="${product.main_image ? `/uploads/${product.main_image}` : '/public/images/placeholder-product.jpg'}" 
                   alt="${product.name}" 
                   class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                   onerror="this.src='/public/images/placeholder-product.jpg'">
            </div>
            <h3 class="font-semibold text-gray-900 text-sm mb-2 line-clamp-2">${product.name}</h3>
            <div class="flex items-center justify-between">
              <span class="text-lg font-bold text-green-600">${this.formatCurrency(product.discount_price || product.price)}</span>
              ${product.discount_price ? `<span class="text-xs bg-red-100 text-red-600 px-2 py-1 rounded">SALE</span>` : ''}
            </div>
          </div>
        `).join('');
      }

      hideRecommendedSection() {
        const section = document.querySelector('section');
        if (section) {
          section.style.display = 'none';
        }
      }
    }

    // Initialize cart manager
    window.cartManager = null;

    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', () => {
        window.cartManager = new CartManager();
      });
    } else {
      window.cartManager = new CartManager();
    }
  </script>
</body>
</html>