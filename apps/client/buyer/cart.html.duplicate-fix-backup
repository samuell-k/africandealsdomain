  <main class="flex-1 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Page Header -->
    <div class="mb-8">
      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-2">
        <span class="mr-2">üõí</span>
        Your Shopping Cart
      </h1>
      <p class="text-gray-600">Review your items and proceed to checkout</p>
    </div>

    <!-- Cart Content -->
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
      
      <!-- Cart Items -->
      <div class="lg:col-span-2">
        <div class="glass-card rounded-2xl p-6 shadow-lg">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-bold text-gray-900">Cart Items</h2>
            <span id="cart-item-count" class="text-sm text-gray-500">0 items</span>
          </div>
          
          <!-- Cart Items List -->
          <div id="cart-items-list" class="space-y-4">
            <!-- Items will be loaded here -->
            <div class="text-center py-12">
              <div class="text-6xl mb-4">üõí</div>
              <h3 class="text-xl font-bold text-gray-900 mb-2">Your cart is empty</h3>
              <p class="text-gray-600 mb-6">Add some amazing products to get started!</p>
              <a href="/buyer/buyers-home.html" class="bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white px-6 py-3 rounded-xl font-medium transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105">
                Start Shopping
              </a>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Order Summary -->
      <div>
        <div class="glass-card rounded-2xl p-6 shadow-lg sticky top-24">
          <h2 class="text-xl font-bold text-gray-900 mb-6">Order Summary</h2>
          
          <div class="space-y-4">
            <div class="flex justify-between">
              <span class="text-gray-600">Subtotal:</span>
              <span id="cart-subtotal" class="font-semibold">FRw 0</span>
            </div>
            <div class="flex justify-between">
              <span class="text-gray-600">Items:</span>
              <span id="cart-item-count" class="font-semibold">0</span>
            </div>
            <hr class="my-4">
            <div class="flex justify-between text-lg font-bold">
              <span>Subtotal:</span>
              <span id="cart-total" class="text-green-600">FRw 0</span>
            </div>
            <div class="text-sm text-gray-500 text-center">
              Delivery options and final pricing will be calculated at checkout
            </div>
          </div>
          
          <button id="checkout-btn" class="w-full bg-gradient-to-r from-green-500 to-green-600 hover:from-green-600 hover:to-green-700 text-white px-6 py-4 rounded-xl font-bold text-lg mt-6 transition-all duration-300 shadow-lg hover:shadow-xl transform hover:scale-105 disabled:opacity-50 disabled:cursor-not-allowed" disabled>
            Proceed to Checkout
          </button>
          
          <div class="mt-4 text-center">
            <a href="/buyer/buyers-home.html" class="text-blue-600 hover:text-blue-700 font-medium text-sm">
              ‚Üê Continue Shopping
            </a>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Recommended Products -->
    <section class="mt-16">
      <h2 class="text-2xl font-bold text-gray-900 mb-6">You Might Also Like</h2>
      <div id="recommended-products" class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 xl:grid-cols-5 gap-4 md:gap-6">
        <!-- Recommended products will be loaded here -->
      </div>
    </section>
    
