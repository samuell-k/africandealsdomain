<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Search Results - ADD Physical Products</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .animate-fade-in {
            animation: fadeIn 0.5s ease-in-out;
        }
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .glass-morphism {
            background: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
        }
    </style>
</head>
<body class="bg-gradient-to-br from-blue-50 via-white to-purple-50 min-h-screen">
    <!-- Navigation -->
    <nav class="glass-morphism border-b border-gray-200">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <div class="flex items-center">
                    <a href="/public/index.html" class="text-2xl font-bold text-gray-800 hover:text-blue-600 transition-colors">
                        <i class="fas fa-shopping-cart mr-2"></i>ADD Physical Products
                    </a>
                </div>
                <div class="flex items-center space-x-4">
                    <a href="/public/index.html" class="text-gray-600 hover:text-blue-600 transition-colors">
                        <i class="fas fa-home mr-1"></i>Home
                    </a>
                    <a href="/public/product-list.html" class="text-gray-600 hover:text-blue-600 transition-colors">
                        <i class="fas fa-th mr-1"></i>Products
                    </a>
                    <a href="/auth/auth-buyer.html" class="text-gray-600 hover:text-blue-600 transition-colors">
                        <i class="fas fa-user mr-1"></i>Login
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="max-w-7xl mx-auto px-4 py-8">
        <!-- Flash Messages -->
        <div id="flash-messages"></div>

        <!-- Search Header -->
        <div class="mb-8">
            <h1 class="text-3xl font-bold text-gray-800 mb-2" id="search-title">Search Results</h1>
            <p class="text-gray-600" id="search-subtitle">Find what you're looking for</p>
        </div>

        <!-- Search Form -->
        <div class="mb-8">
            <form id="search-form" class="flex gap-4 max-w-2xl">
                <input type="text" id="search-input" placeholder="Search products..." class="flex-1 border border-gray-300 rounded-lg px-4 py-3 focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                <button type="submit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors">
                    <i class="fas fa-search mr-2"></i>Search
                </button>
            </form>
        </div>

        <!-- Results Container -->
        <div id="results-container">
            <div class="text-center py-8">
                <div class="animate-spin rounded-full h-8 w-8 border-b-2 border-blue-600 mx-auto mb-4"></div>
                <p class="text-gray-500">Loading search results...</p>
            </div>
        </div>
    </div>

    <script>
        // --- SEARCH FUNCTIONALITY ---
        let currentQuery = '';
        let searchResults = [];

        // Get search query from URL parameters
        function getSearchQuery() {
            const urlParams = new URLSearchParams(window.location.search);
            return urlParams.get('q') || '';
        }

        // Update search input with current query
        function updateSearchInput() {
            const searchInput = document.getElementById('search-input');
            searchInput.value = currentQuery;
        }

        // Update search title and subtitle
        function updateSearchHeader() {
            const searchTitle = document.getElementById('search-title');
            const searchSubtitle = document.getElementById('search-subtitle');
            
            if (currentQuery) {
                searchTitle.textContent = `Search Results for "${currentQuery}"`;
                searchSubtitle.textContent = `Found ${searchResults.length} product${searchResults.length !== 1 ? 's' : ''}`;
            } else {
                searchTitle.textContent = 'Search Results';
                searchSubtitle.textContent = 'Find what you\'re looking for';
            }
        }

        // Perform search
        async function performSearch(query) {
            try {
                const response = await fetch(`/api/products/search?q=${encodeURIComponent(query)}`);
                const resultsContainer = document.getElementById('results-container');

                if (response.ok) {
                    const data = await response.json();
                    searchResults = data.products || [];

                    if (searchResults.length > 0) {
                        resultsContainer.innerHTML = `
                            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                                ${searchResults.map(product => `
                                    <div class="bg-white rounded-lg shadow-lg overflow-hidden hover:shadow-xl transition-shadow animate-fade-in">
                                        <a href="/public/product-detail.html?id=${product.id}">
                                            <img src="${product.image || '/public/images/placeholder.jpg'}" alt="${product.name}" class="h-48 w-full object-cover">
                                        </a>
                                        <div class="p-4">
                                            <h3 class="font-bold text-lg mb-2 text-gray-800">${product.name}</h3>
                                            <p class="text-gray-600 text-sm mb-3 line-clamp-2">${product.description || 'No description available'}</p>
                                            <div class="flex justify-between items-center">
                                                <div class="text-green-700 font-bold text-lg">$${product.price}</div>
                                                <button onclick="addToCart(${product.id})" class="bg-blue-600 text-white px-4 py-2 rounded hover:bg-blue-700 transition-colors">
                                                    <i class="fas fa-cart-plus mr-1"></i>Add to Cart
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                `).join('')}
                            </div>
                        `;
                    } else {
                        resultsContainer.innerHTML = `
                            <div class="text-center py-12">
                                <i class="fas fa-search text-6xl text-gray-300 mb-6"></i>
                                <h3 class="text-xl font-semibold text-gray-600 mb-2">No products found</h3>
                                <p class="text-gray-500">No products found for "${query}"</p>
                                <a href="/public/product-list.html" class="text-blue-600 hover:text-blue-700 text-sm font-semibold mt-4 inline-block">
                                    Browse all products â†’
                                </a>
                            </div>
                        `;
                    }
                } else {
                    resultsContainer.innerHTML = `
                        <div class="text-center py-8">
                            <i class="fas fa-exclamation-triangle text-4xl text-red-300 mb-4"></i>
                            <p class="text-gray-500">Failed to load search results</p>
                        </div>
                    `;
                }
            } catch (error) {
                console.error('Error performing search:', error);
                document.getElementById('results-container').innerHTML = `
                    <div class="text-center py-8">
                        <i class="fas fa-exclamation-triangle text-4xl text-red-300 mb-4"></i>
                        <p class="text-gray-500">Error loading search results</p>
                    </div>
                `;
            }
        }

        // Add to cart functionality
        function addToCart(productId) {
            // Check if user is logged in
            const token = localStorage.getItem('authToken');
            if (!token) {
                showFlashMessage('Please login to add items to cart', 'error');
                return;
            }

            // Add to cart logic here
            showFlashMessage('Product added to cart!', 'success');
        }

        // Handle search form submission
        document.getElementById('search-form').addEventListener('submit', function(e) {
            e.preventDefault();
            const searchInput = document.getElementById('search-input');
            const query = searchInput.value.trim();
            
            if (query) {
                currentQuery = query;
                updateSearchHeader();
                performSearch(query);
                
                // Update URL without page reload
                const url = new URL(window.location);
                url.searchParams.set('q', query);
                window.history.pushState({}, '', url);
            }
        });

        // --- FLASH MESSAGES ---
        function showFlashMessage(message, type = 'success') {
            const flashContainer = document.getElementById('flash-messages');
            const messageDiv = document.createElement('div');
            
            messageDiv.className = `px-4 py-3 rounded-lg mb-4 animate-fade-in ${
                type === 'success' 
                    ? 'bg-green-100 text-green-800 border border-green-200' 
                    : 'bg-red-100 text-red-800 border border-red-200'
            }`;
            
            messageDiv.innerHTML = `
                <div class="flex items-center justify-between">
                    <span>${message}</span>
                    <button onclick="this.parentElement.parentElement.remove()" class="text-gray-500 hover:text-gray-700">
                        <i class="fas fa-times"></i>
                    </button>
                </div>
            `;
            
            flashContainer.appendChild(messageDiv);
            
            // Auto-remove after 5 seconds
            setTimeout(() => {
                if (messageDiv.parentElement) {
                    messageDiv.remove();
                }
            }, 5000);
        }

        // --- INITIALIZATION ---
        document.addEventListener('DOMContentLoaded', function() {
            // Get search query from URL
            currentQuery = getSearchQuery();
            
            // Update search input
            updateSearchInput();
            
            // Update search header
            updateSearchHeader();
            
            // Perform search if query exists
            if (currentQuery) {
                performSearch(currentQuery);
            } else {
                // Show empty state
                document.getElementById('results-container').innerHTML = `
                    <div class="text-center py-12">
                        <i class="fas fa-search text-6xl text-gray-300 mb-6"></i>
                        <h3 class="text-xl font-semibold text-gray-600 mb-2">Search for products</h3>
                        <p class="text-gray-500">Enter a search term above to find products</p>
                    </div>
                `;
            }
        });
    </script>
</body>
</html>
