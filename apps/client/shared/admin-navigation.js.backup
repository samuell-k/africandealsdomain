          <a href="/admin/products.html" class="nav-link ${this.currentPage === 'products' ? 'bg-gray-900 text-white' : 'text-gray-300 hover:bg-gray-700 hover:text-white'} group flex items-center px-4 py-2 text-sm font-medium rounded-md transition-colors">
