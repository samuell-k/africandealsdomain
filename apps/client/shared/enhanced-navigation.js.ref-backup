  getBreadcrumbsHTML() {
    const breadcrumbs = this.generateBreadcrumbs();
    
    return `
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <nav class="flex" aria-label="Breadcrumb">
